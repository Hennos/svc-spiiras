.userPreferences-component_wrapper
  background main_light_grey_color
  opacity 0.8
  width 70%
  margin-left auto

  .UserPreferences-area_wrapper
    background main_light_grey_color
    display flex
    flex-direction column
    justify-content center

    border-width 0 0 2px 0
    border-color main_middle_grey_color
    border-style solid
    width auto

    padding 1em

    .name_wrapper
      width 100%
      padding-bottom 1em

      .name
        width 90%
        margin-left auto

        p
          display block
          padding-bottom 0.2em
          font-weight bold

    .UserPreferences_wrapper
      width 100%
      display block
      .submitButton
        width 100%
        text-align: center
        padding-top 1em
        input[type="button"]
          margin-bottom 1.5em
          outline: none // удаляет обводку в браузерах хром(желтая) и сафари(синяя)
          border: 1px solid main_dark_grey_color //цвет рамки
          background: #ffffff
          text-align center
          font-size: 1em

        width: 100% // ширина на свое усмотрение
      .module_wrapper
        display table
        .name_block
          p
          display table-cell
          padding-bottom 0.2em
          font-weight bold
        .input_block
          width 50%

          text-align: right
          //padding-left 50%
          display table-cell
          input[type="text"]


           width 10em
           border: 2px solid main_light_grey_color //цвет рамки
           border-width 2px 0px 2px 0px
           border-radius: 0 //закругление углов (общее)  //закругление углов (Google Chrome)  //закругление углов (FireFox)
           -khtml-border-radius 0 //закругление углов (Safari)

           background: #ffffff !important // желательно прописывать, так как в Chrome при сохранных данных оно может быть желтым
           outline: none // удаляет обводку в браузерах хром(желтая) и сафари(синяя)
           height: 1.4em // высота на свое усмотрение
           color: black //цвет шрифта в обычном состоянии
           font-size: 1.3em // Размер шрифта
           &:focus
             border-bottom 2px solid main_dark_grey_color

