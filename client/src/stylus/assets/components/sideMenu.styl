.side-menu_wrapper
  height min-content

  order -1

  background-color main_white_color
  border-right 1px solid main_middle_dark_grey_color
  box-shadow 0 10px 15px 0 main_middle_dark_grey_color

  .block
    padding 0.5em 0.7em
    border-bottom 1px solid main_middle_grey_color

    .button
      text-align center
      padding 0.4em 0
      p
        display block
        padding 0.7em
        border 2px dashed main_middle_grey_color
        border-radius 100%

        font-size 1.3em
        color main_dark_grey_color
        margin 0 auto
        &:hover, &:active
          cursor pointer
          box-shadow inset 0 0 20px 0 main_cyan_color
          border-style solid
          color main_dark_grey_color
