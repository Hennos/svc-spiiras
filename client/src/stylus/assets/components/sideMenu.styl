.side-menu_wrapper
  background-color main_white_color
  display inline-block
  max-width 100%
  position absolute
  top 0
  left 0
  height 100%
  border-right 1px solid main_middle_dark_grey_color
  box-shadow 0px -7px 15px 0 main_middle_dark_grey_color

  .block
    padding  0.5em 0.7em
    border-bottom 1px solid main_middle_grey_color




    .button
      text-align center
      padding  0.4em 0
      p
        display block
        //box-shadow inset 0 0 1px 1px main_cyan_color
        padding 0.7em
        border 2px dashed main_middle_grey_color
        border-radius 100%

        font-size 1.3em
        color main_dark_grey_color
        margin 0 auto
        &:hover, &:active
          cursor pointer
          box-shadow inset 0 0 20px 0 main_cyan_color
          border-style solid
          color main_dark_grey_color

  .button-menu_wrapper
    padding 0.8em 1.9em
    .button
      padding 0
      p
        width auto
        margin 0 auto
        padding 0
        font-size 1.4em
        border none
        box-shadow none
        &:hover, &:active
          border none
          color main_cyan_color
          box-shadow none

