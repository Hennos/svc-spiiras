.friends-component_wrapper
  background main_light_grey_color
  opacity 0.8

  .search-area_wrapper
    width 80%

    display flex
    flex-direction column
    justify-content center

    padding 1em

    .name_wrapper
      padding-left 1.5em

      p
        padding-bottom 0.2em
        font-weight bold

    .search_wrapper
      padding 0 1.5em 0 1.5em

      input[type="text"]
        width 80%
        min-width 8em

        border-width 0
        border-radius: 0

        background: #ffffff !important // желательно прописывать, так как в Chrome при сохранных данных оно может быть желтым
        outline: none // удаляет обводку в браузерах хром(желтая) и сафари(синяя)
        height: 1.4em // высота на свое усмотрение
        color: black //цвет шрифта в обычном состоянии
        font-size: 1.3em // Размер шрифта
        &:focus
          box-shadow inset 0 0 3px 0 main_dark_grey_color

  .people-area_wrapper
    width 80%

    display inline-block
    border-color 2px solid main_middle_grey_color

    background-color main_light_grey_color

    .people_wrapper
      background-color main_light_grey_color

      .module_wrapper

        &:last-child
          border-bottom 2px solid main_middle_grey_color

        .info_block
          padding-top 2.5em

          border-width 2px 2px 0 0
          border-color main_middle_grey_color
          border-style solid

          p
            padding-left 3%
            padding-bottom 1em
            color main_black_color

        .friends_block

          .man_wrapper
            padding 0.5em 0.5em
            width auto

            border-top-width 1px
            border-style solid
            border-color main_middle_grey_color

            &:first-child
              border-top-width 2px

            .man
              display flex
              align-items center

              .img_place
                padding 0 0.5em 0 0.5em

                img, p
                  border-radius 100%
                  margin-right auto

                p
                  padding 0.3em 0.4em
                  border 2px dashed main_middle_dark_grey_color
                  font-size 2.5em
                  color main_middle_dark_grey_color

                img
                  display block
                  border-radius 100%
                  width 50%
                  height auto
                  border 2px solid main_middle_grey_color

              .name_place
                flex-grow 1
                padding 0 0.5em 0 0.5em

                li
                  color main_middle_dark_grey_color
                  padding-bottom 0.3em
                  &:nth-child(1)
                    color main_black_color
                  &:last-child
                    padding-bottom 0
                .allName
                  font-style italic

              .buttons_wrapper
                padding 0 0.5em 0 0.5em
                text-align right

                .button_wrapper
                  padding 0.3em
                  display inline-block
                  vertical-align middle

                  .button
                    text-align center
                    padding 0.4em 0

                    p
                      display block
                      padding 0.7em 0.8em
                      border 2px dashed main_middle_grey_color
                      border-radius 100%

                      font-size 1.3em
                      color main_dark_grey_color
                      margin 0 auto
                      &:hover, &:active
                        cursor pointer
                        box-shadow inset 0 0 20px 0 main_cyan_color
                        border-style solid
                        color main_dark_grey_color
