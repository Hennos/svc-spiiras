.bubbled
  border-bottom 1px solid main_light_dark_grey_color
  box-shadow 0 2px 2px main_light_dark_grey_color

.admin-acc-component_wrapper
  opacity 0.8

  .admined-user-wrapper
    display flex
    flex-wrap wrap
    justify-content center
    align-items flex-start

    .account-creating_wrapper
      display flex
      flex-direction column
      align-items flex-start

      margin 0.5em
      padding 0.5em

      background main_light_grey_color

      border 1px solid main_light_dark_grey_color
      box-shadow 0 1px 2px main_light_dark_grey_color

      .header_wrapper
        padding 0.25em

        .title
          margin-left auto

          p
            display block
            font-weight bold

      .creating_form_wrapper
        padding 0.25em
        margin 0 1em

        .name-input
          padding 0.25em 0

          .input_wrapper
            padding 0.25em 0
            margin 0 auto

            .name_block
              padding-left 0.2em

              p
                padding-bottom 0.2em
                font-weight bold

            .input_block
              display inline-block
              text-align: right

              input[type="text"]
                padding-left 5px
                padding-right 5px

                width calc(100% - 10px)

                border: 0
                background: #ffffff !important
                outline: none
                height: 1.4em
                color: black
                font-size: 1.3em

                box-shadow inset 0 0 3px 0 main_dark_grey_color

        .set-permission-wrapper
          padding 0.25em 0

          .header_block
            font-weight bold

          .permission-wrapper
            margin 0 1em

            .permission-area

              .base-permission-area
                display flex

                padding 0.3em 0 0.3em 0

                .name_block
                  padding-right 0.5em

                  width 15em

                .checkbox_block

                  input[type="checkbox"]

                    &:hover, &:active
                      cursor pointer

              .pass-permission-area
                display flex
                flex-direction column

                .input_block

                  input[type="text"]
                    padding-left 5px
                    padding-right 5px

                    width calc(100% - 10px)

                    border: 0
                    background: #ffffff !important
                    outline: none
                    height: 1.4em
                    color: black
                    font-size: 1.3em

                    box-shadow inset 0 0 3px 0 main_dark_grey_color

        .submitButton
          text-align center
          padding 1em 0

          input[type="button"]
            outline: none
            border: 1px solid main_dark_grey_color
            background: #ffffff
            font-size: 1em

            &:hover, &:active
              cursor pointer

    .admined_user
      margin 0.5em

      display flex
      flex-direction column

      .control-account-area
        width 280px

        margin-bottom 0.5em

        background-color main_light_grey_color

        border 1px solid main_light_dark_grey_color
        box-shadow 0 1px 2px main_light_dark_grey_color

        .control-area
          display flex
          align-items center

          padding 0.3em

          .img-place
            flex-grow 1

            padding 0.3em

            img, p
              border-radius 100%

            p
              text-align center
              padding 0.1em 0.2em
              border 2px dashed main_middle_dark_grey_color
              font-size 2em
              color main_middle_dark_grey_color
              margin 0 auto

            img
              display block
              border-radius 100%
              width 50%
              height auto
              border 2px solid main_middle_grey_color

          .username_place
            flex-grow 2

            padding 0.3em

            p
              font-size 0.8em

          .buttons-area
            flex-grow 1

            display flex
            justify-content flex-end
            flex-wrap wrap

            padding 0.3em

            .button
              padding-left 0.2em
              padding-right 0.2em

              text-align center

              p
                display block

                width 2em
                height 2em
                line-height 2em

                border 2px solid main_middle_dark_grey_color
                border-radius 100%

                background-color main_middle_grey_color

                font-size 1em

                &:hover, &:active
                  cursor pointer
                  box-shadow inset 0 0 10px 0 main_middle_dark_grey_color

        .information-area
          margin-top 0.3em
          padding 0.3em

          .header-area
            padding 0.2em

            box-shadow inset 0 -1px 0 0 main_middle_dark_grey_color

          .submit-button
            padding-top 0.2em
            padding-bottom 0.5em

            text-align center

            input[type="button"]
              outline: none
              border: 1px solid main_dark_grey_color
              background: #ffffff
              font-size: 0.8em

              &:hover, &:active
                cursor pointer

          .info-elements-wrapper
            padding 0.4em 0.8em

            font-size 0.8em

            .input_block input[type="text"]
                padding 2px 5px

            .elem-area
              display flex

              padding-top 0.2em
              padding-bottom 0.2em

              .name-block
                padding-right 1em

            .permission-block
              input[type="checkbox"]
                &:hover, &:active
                  cursor pointer

          .fat-elements .name-block
            flex-grow 1
