.admin-acc-component_wrapper
  background main_light_grey_color
  opacity 0.8

  .admined_user_wrapper
    display flex

    .adminAccount_wrapper

      .name_wrapper

        .name
          margin-left auto

          p
            display block
            padding-bottom 0.2em
            font-weight bold

      .input_wrapper
        padding-top 2em

        .name_block
          display inline-block
          padding-right 1em
          text-align center

          p
            padding-bottom 0.2em
            font-weight bold

        .input_block
          display inline-block
          text-align: right

          input[type="text"]
            width 10em
            border: 2px solid main_light_grey_color //цвет рамки
            border-width 2px 0px 2px 0px
            border-radius: 0 //закругление углов (общее)  //закругление углов (Google Chrome)  //закругление углов (FireFox)
            -khtml-border-radius 0 //закругление углов (Safari)

            background: #ffffff !important // желательно прописывать, так как в Chrome при сохранных данных оно может быть желтым
            outline: none // удаляет обводку в браузерах хром(желтая) и сафари(синяя)
            height: 1.4em // высота на свое усмотрение
            color: black //цвет шрифта в обычном состоянии
            font-size: 1.3em // Размер шрифта

            &:focus
              border-bottom 2px solid main_dark_grey_color

      .submitButton
        text-align: center
        padding-right 20%
        padding-top 1em
        input[type="button"]
          margin-bottom 1.5em
          outline: none // удаляет обводку в браузерах хром(желтая) и сафари(синяя)
          border: 1px solid main_dark_grey_color //цвет рамки
          background: #ffffff
          text-align center
          font-size: 1em

      .checkbox_wrapper
        padding-top 1em

        .name_block
          display inline-block

        .checkbox_block
          display inline-block

    .admined_user
      padding 0.5em
