.chat-component_wrapper
  background main_light_grey_color
  opacity 0.8
  width 80%
  margin-left auto

  .chat-component-block_wrapper
    display: flex

    .conference-area_wrapper
      flex-grow 4
      margin auto
      display flex
      flex-direction column
      align-items center

      .conference-sides_wrapper
        margin auto

      .conference-disconnect-button_wrapper

        .button
          padding  0.4em 0

          p
            display block
            //box-shadow inset 0 0 1px 1px main_cyan_color
            padding  0.7em 0.8em
            border 2px dashed main_middle_grey_color
            border-radius 100%

            font-size 1.3em
            color main_dark_grey_color
            margin 0 auto
            &:hover, &:active
              cursor pointer
              box-shadow inset 0 0 20px 0 main_cyan_color
              border-style solid
              color main_dark_grey_color

    .friend-list-area_wrapper
      flex-grow 0

      border 2px solid main_middle_grey_color
      border-width 0px 0px 0px 2px

      .search-area_wrapper
        display flex
        flex-direction column
        justify-items center

        padding 0.5em
        border 2px solid main_middle_grey_color
        border-width 0px 0px 2px 0px

        .name_wrapper

          p
            display block
            padding-bottom 0.2em
            font-weight bold

        .search_wrapper
          display block

          input[type="text"]
            width 100%
            display block

            border: 2px solid main_light_grey_color //цвет рамки
            border-width 2px 0px 2px 0px
            border-radius: 0

            background: #ffffff !important // желательно прописывать, так как в Chrome при сохранных данных оно может быть желтым
            outline: none // удаляет обводку в браузерах хром(желтая) и сафари(синяя)
            height: 1.4em
            color: black
            font-size: 1.3em
            &:focus
              border-bottom 2px solid main_dark_grey_color

      .friends-area_wrapper

        .friends_wrapper

          .friend_wrapper
            padding 0.25em 0.25em
            width auto
            border-bottom 1px solid main_middle_grey_color
            :nth-last-child
              border-bottom none

            .friend
              width 100%
              display flex
              justify-content space-around
              align-items center

              .img_place

                img, p
                  border-radius 100%

                p
                  text-align center
                  padding 0.3em 0.4em
                  border 2px dashed main_middle_dark_grey_color
                  font-size 2em
                  color main_middle_dark_grey_color
                  margin 0 auto

                img
                  display block
                  border-radius 100%
                  width 50%
                  height auto
                  border 2px solid main_middle_grey_color

              .username_wrapper

                div
                  color main_middle_dark_grey_color
                  padding-bottom 0.3em
                  &:nth-child(1)
                    color main_black_color
                  &:last-child
                    padding-bottom 0

              .button_wrapper
                padding  0.3em

                .button
                  text-align center
                  padding  0.4em 0

                  p
                    display block
                    padding  0.6em 0.7em
                    border 2px dashed main_middle_grey_color
                    border-radius 100%

                    font-size 1.3em
                    color main_dark_grey_color
                    margin 0 auto
                    &:hover, &:active
                      cursor pointer
                      box-shadow inset 0 0 20px 0 main_cyan_color
                      border-style solid
                      color main_dark_grey_color

          .module_wrapper

            .info_block
              width 100%
              padding-top 1.5em
              border 2px solid main_middle_grey_color
              border-width 0px 0px 2px 0

              p
                padding-left 3%
                padding-bottom 0.5em
                color main_black_color
