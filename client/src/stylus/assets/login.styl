.page-login

  .loginPasswordWrapper

    center()
    align()

    width 100%
    display block
    max-width 95%

    padding-top 0.5em
    padding-bottom 1em

    text-align center
    border 1px solid main_dark_grey_color
    border-width 0px 1px 0px 1px

    h3
      font-weight bold
      padding 1.8em 0
      color black
      font-size 1.5em
      text-transform uppercase

    form
      center()
      width 18%
      text-align left

      p
        padding-bottom 0.7em

      .infoBlock
        padding-bottom 2em
        p
          font-size 1.1em
          color main_red_color
          padding 0 5%

      input[type="text"], input[type="password"]

        margin-bottom 1.5em
        display block

        border: 2px solid main_light_grey_color //цвет рамки
        border-width 2px 0px 2px 0px
        border-radius: 0 //закругление углов (общее)  //закругление углов (Google Chrome)  //закругление углов (FireFox)
        -khtml-border-radius 0 //закругление углов (Safari)

        background: #ffffff !important // желательно прописывать, так как в Chrome при сохранных данных оно может быть желтым
        outline: none // удаляет обводку в браузерах хром(желтая) и сафари(синяя)
        height: 1.4em // высота на свое усмотрение
        width: 100% // ширина на свое усмотрение
        color: black //цвет шрифта в обычном состоянии
        font-size: 1.3em // Размер шрифта
        &:focus
          border-bottom 2px solid main_dark_grey_color

      .button

        margin-bottom 1.5em
        outline: none // удаляет обводку в браузерах хром(желтая) и сафари(синяя)
        border: 1px solid main_dark_grey_color //цвет рамки
        background: #ffffff
        text-align center
        font-size: 1em

        width: 100% // ширина на свое усмотрение

        p, a
          padding 0.4em 0
          font-size 1.3em
          color: main_dark_grey_color
        a
          text-decoration none
          display block
          width 100%
          font-weight normal

        &:hover, &:active, &:focus
          border: 1px solid main_cyan_color
          background-color main_cyan_color
          cursor pointer

          p, a
            color main_dark_grey_color





